@model Vinoteca.Web.ViewModels.Variedad.VariedadEditVm

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Variedad</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.VariedadId)

    <div class="form-group">
        @Html.LabelFor(model => model.NombreVariedad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NombreVariedad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NombreVariedad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mt-3">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-success" })
        </div>
    </div>
</div>
}
