@model Vinoteca.Web.ViewModels.Producto.ProductoListVm

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>¿Está seguro/a que desea eliminar el siguiente producto?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-8">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Variedad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Variedad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PrecioVenta)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PrecioVenta)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UnidadesDisponibles)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UnidadesDisponibles)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Bodega)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Bodega)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Stock)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Stock)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Suspendido)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Suspendido)
                </dd>
            </dl>
        </div>
        <div class="col-4">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Imagen)
                @if (Model.Imagen != null)
                {
                    <img src="@Url.Content(Vinoteca.Utilidades.WC.ProductosImagenesFolder + Model.Imagen)" style="width:100px; height:100px" />
                }
                else
                {
                    <img src = "@Url.Content(Vinoteca.Utilidades.WC.SinImagenDisponible)" style = "width:100px; height:100px" />
                }
            </div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
