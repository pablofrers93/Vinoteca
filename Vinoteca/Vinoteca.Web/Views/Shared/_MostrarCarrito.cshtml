@model Vinoteca.Web.Models.Carrito.Carrito
@{
    string returnUrl = "Productos";
}
<form class="d-flex" action="@Url.Action("Index", "Carrito", new {returnUrl})">
    <button class="btn btn-outline-light" type="submit">
        <i class="fa fa-shopping-cart me-1"></i>
        Carrito
        <span class="badge bg-light text-dark ms-1 rounded-pill">@Model.GetCantidad()</span>
    </button>
</form>
